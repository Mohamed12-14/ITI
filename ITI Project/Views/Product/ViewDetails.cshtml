@model Product

@{
    ViewData["Title"] = "Product Details";
}

<h2>Product Details</h2>

<div class="card" style="width: 18rem;">
    <div class="card-body">
        <h5 class="card-title">@Model.Title</h5>
        <p class="card-text">
            <strong>Price:</strong> @Model.Price<br />
            <strong>Description:</strong> @Model.Description<br />
            <strong>Category:</strong> @Model.Category?.Name<br />
            <strong>Quantity:</strong> @Model.Quantity
        </p>
        <a href="@Url.Action("Index")" class="btn btn-primary">Back to Product List</a>
    </div>
</div>
